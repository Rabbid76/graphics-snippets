{
  "name": "gltf-viewer",
  "version": "1.0.0",
  "description": "GLTF viewer",
  "scripts": {
    "install:ncu": "npm install -g npm-check-updates",
    "install:webpack": "npm install --save-dev webpack",
    "update:modules": "ncu -u && npm update && npm i",
    "build:client": "webpack --config ./src/client/webpack.prod.js",
    "build:server": "tsc -p ./src/server",
    "build": "npm run build:client && npm run build:server",
    "dev": "webpack serve --config ./src/client/webpack.dev.js",
    "start": "node ./dist/server/three_server.js",
    "copy:deploy": "copyfiles --flat ./dist/client/*.js ./deploy && copyfiles --flat ./dist/client/*.png ./deploy && copyfiles --flat ./dist/client/*.envmap ./deploy"
  },
  "author": "Rabbid76",
  "license": "ISC",
  "devDependencies": {
    "@types/dat.gui": "^0.7.10",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.0",
    "@types/three": "^0.153.0",
    "axios": "^1.4.0",
    "copyfiles": "^2.4.1",
    "dat.gui": "^0.7.9",
    "install-peers": "^1.0.4",
    "raw-loader": "^4.0.2",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "postprocessing": "^6.32.2",
    "realism-effects": "https://github.com/0beqz/realism-effects/tarball/main",
    "three": "0.154.0"
  }
}
